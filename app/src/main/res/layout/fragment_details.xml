<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:scrollbars="none"
        android:fillViewport="true"
        tools:context=".fragments.CreateNewListFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_createNewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_topleft_corner_white_noborder">

            <!--First Item-->
            <!--cl_firstItem-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_firstItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_numberOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:background="@drawable/shape_circle_green"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingEnd="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_firstItem"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/darkGreen"
                    android:layout_marginStart="@dimen/margin_3xlarge"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberOne" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_large"
                    tools:text="Shopping list"
                    android:textSize="@dimen/textsize_xlarge"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberOne"
                    app:layout_constraintLeft_toRightOf="@+id/view_firstItem"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Second Item-->
            <!--cl_secondItem-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_secondItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@+id/cl_firstItem">

                <TextView
                    android:id="@+id/tv_numberTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:background="@drawable/shape_circle_green"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingEnd="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/creator"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_secondItem"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/darkGreen"
                    android:layout_marginStart="@dimen/margin_3xlarge"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberTwo" />

                <TextView
                    android:id="@+id/tv_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_large"
                    tools:text="Inspire Coding"
                    android:textSize="@dimen/textsize_xlarge"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberTwo"
                    app:layout_constraintLeft_toRightOf="@+id/view_secondItem"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Third Item-->
            <!--cl_thirdItem-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_thirdItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@+id/cl_secondItem">

                <TextView
                    android:id="@+id/tv_numberThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:background="@drawable/shape_circle_green"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingEnd="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/due_date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_thirdItem"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/darkGreen"
                    android:layout_marginStart="@dimen/margin_3xlarge"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberThree" />

                <TextView
                    android:id="@+id/tv_dueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_large"
                    tools:text="30 Apr 2020"
                    android:textSize="@dimen/textsize_xlarge"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberThree"
                    app:layout_constraintLeft_toRightOf="@+id/view_thirdItem"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Forth Item-->
            <!--cl_fourthItem-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_fourthItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@+id/cl_thirdItem">

                <TextView
                    android:id="@+id/tv_numberFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:background="@drawable/shape_circle_green"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingEnd="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/friends_shared_with"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_forthItem"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/darkGreen"
                    android:layout_marginStart="@dimen/margin_3xlarge"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberFour" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/hsv_createNewList_thirdItem_friends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@+id/tv_numberFour"
                    app:layout_constraintLeft_toRightOf="@+id/view_forthItem"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chg_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.core.widget.NestedScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>