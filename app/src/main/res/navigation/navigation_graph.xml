<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.inspirecoding.supershopper.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"/>
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.inspirecoding.supershopper.fragments.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"/>
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"/>
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.inspirecoding.supershopper.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.inspirecoding.supershopper.fragments.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_createNewListFragment"
            app:destination="@id/createNewListFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"/>
        <action
            android:id="@+id/action_mainFragment_to_shoppingListFragment"
            app:destination="@id/shoppingListFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"/>
    </fragment>
    <fragment
        android:id="@+id/createNewListFragment"
        android:name="com.inspirecoding.supershopper.fragments.CreateNewListFragment"
        tools:layout="@layout/fragment_create_new_list" >
        <argument
            android:name="shoppingList"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="com.inspirecoding.supershopper.model.ShoppingList"/>
        <action
            android:id="@+id/action_createNewListFragment_to_addNewItemDialog"
            app:destination="@id/addNewItemDialog" />
        <action
            android:id="@+id/action_createNewListFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popUpTo="@id/createNewListFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <dialog
        android:id="@+id/addNewItemDialog"
        android:name="com.inspirecoding.supershopper.fragments.AddNewItemDialog"
        android:label="Add New Item"
        tools:layout="@layout/fragment_add_new_item_dialog">
        <argument
            android:name="listItem"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="com.inspirecoding.supershopper.model.ListItem"/>
        <argument
            android:name="position"
            android:defaultValue="0"
            app:argType="integer"/>
    </dialog>
    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="com.inspirecoding.supershopper.fragments.ShoppingListFragment"
        tools:layout="@layout/fragment_open_bought">
        <argument
            android:name="shoppingList"
            app:argType="com.inspirecoding.supershopper.model.ShoppingList"/>
        <action
            android:id="@+id/action_shoppingListFragment_to_addNewItemDialog"
            app:destination="@id/createNewListFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"/>
        <action
            android:id="@+id/action_shoppingListFragment_to_deleteDialog"
            app:destination="@id/deleteDialog"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right" />
    </fragment>
    <dialog
        android:id="@+id/resetPasswordFragment"
        android:name="com.inspirecoding.supershopper.fragments.ResetPasswordFragment"
        android:label="ResetPasswordFragment"
        tools:layout="@layout/fragment_reset_password"/>
    <fragment
        android:id="@+id/deleteDialog"
        android:name="com.inspirecoding.supershopper.fragments.DeleteDialog"
        android:label="@string/delete_shopping_list"
        tools:layout="@layout/fragment_delete_dialog" >
        <argument
            android:name="shoppingList"
            app:argType="com.inspirecoding.supershopper.model.ShoppingList"/>
        <action
            android:id="@+id/action_deleteDialog_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"
            app:popUpTo="@id/deleteDialog"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_deleteDialog_to_shoppingListFragment"
            app:destination="@id/shoppingListFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"
            app:popUpTo="@id/deleteDialog"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.inspirecoding.supershopper.fragments.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_sensitiveDataFragment"
            app:destination="@id/sensitiveDataFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right" />
        <action
            android:id="@+id/action_profileFragment_to_changeEmailFragment"
            app:destination="@id/changeEmailFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"/>
    </fragment>
    <dialog
        android:id="@+id/changePasswordFragment"
        android:name="com.inspirecoding.supershopper.fragments.ChangePasswordFragment"
        android:label="ChangePasswordFragment"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/sensitiveDataFragment"
        android:name="com.inspirecoding.supershopper.fragments.SensitiveDataFragment"
        android:label="Sensitive Data"
        tools:layout="@layout/fragment_sensitive_data">
        <action
            android:id="@+id/action_sensitiveDataFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"
            app:popUpTo="@id/sensitiveDataFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="source"
            app:argType="string" />
        <action
            android:id="@+id/action_sensitiveDataFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_from_right"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <dialog
        android:id="@+id/changeEmailFragment"
        android:name="com.inspirecoding.supershopper.fragments.ChangeEmailFragment"
        android:label="ChangeEmailFragment"
        tools:layout="@layout/fragment_change_email"/>
</navigation>